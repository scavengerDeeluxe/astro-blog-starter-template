---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
---
/* No frontmatter logic needed unless you want variables later */
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mystery Playlist</title>
    <style>
      body {
        background-color: #121212; /* Spotify dark */
        margin: 0;
        font-family: system-ui, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .player-wrapper {
        position: relative;
        width: 400px;
        height: 600px;
        border-radius: 12px;
        overflow: hidden;
      }
      iframe {
        border: none;
        width: 100%;
        height: 100%;
      }
      .overlay {
        position: absolute;
        top: 80px; /* Adjust to start covering track list */
        left: 0;
        width: 100%;
        height: calc(100% - 80px);
        backdrop-filter: blur(12px);
        background-color: rgba(18, 18, 18, 0.3); /* slight dark tint */
        pointer-events: none; /* let clicks through to controls */
      }
    </style>
  </head>
  <body>
    <div class="player-wrapper">
      <iframe
        src="https://open.spotify.com/embed/playlist/4V7KUDTKBu1DJCExxoZRNd"
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy">
      </iframe>
      <div class="overlay"></div>
    </div>
  </body>
</html>
